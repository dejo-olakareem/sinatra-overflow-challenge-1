
<form class="form-horizontal" action="/questions/<%=@question.id%>" id="usrform" method="post">
    <fieldset>
      <div class="form-group">
        <label for="editTitle" class="col-lg-2 control-label">Title</label>
        <input type="hidden" name="_method" value="put">
        <div class="col-lg-10">
          <input type="text" value="<%=@question.title%>" name="question[title]">
        </div>
      </div>
        <div class="form-group">
          <label for="editBody" class="col-lg-2 control-label">Body</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" id="inputBody" name="question[body]" value="<%=@question.body%>">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </div>
    </fieldset>
</form>


<form action="/questions/<%=@question.id%>" method="post">
	<input type="hidden" name="_method" value="delete">
  <div class="col-lg-10 col-lg-offset-2">
	   <input type="submit" class="btn btn-default" value="Delete">
  </div>   
</form>
