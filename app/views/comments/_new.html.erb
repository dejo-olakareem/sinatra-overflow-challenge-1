
#local: class_name

<form class="form-horizontal" method="POST" action="/<%=@commentable_id%>/comments">
  <fieldset>
    <legend>New Comment</legend>

    <div class="form-group">
      <label for="textArea" name="comment[body]" class="col-lg-2 control-label">Please type your comment here</label>
      <div class="col-lg-10">
        <input type="hidden" name="comment[class]" value="<%=@class_name %>" />
        <textarea class="form-control" rows="3" id="textArea" name="comment[body]"></textarea>
      </div>
    </div>


    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>
