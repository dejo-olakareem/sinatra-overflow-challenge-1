<form class="form-horizontal" method="POST" action="/comments/<%=@id%>">
<input type="hidden" name="_method" value="put"/>
  <fieldset>
    <legend>Edit Comment</legend>

    <div class="form-group">
      <label for="textArea" name="comment[body]" class="col-lg-2 control-label">Edit your comment</label>
      <div class="col-lg-10">
        <textarea class="form-control" rows="3" id="textArea"><%= @comment.body %></textarea>
      </div>
    </div>


    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>
